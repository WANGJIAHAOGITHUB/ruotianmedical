<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.ekgc.medical.patient.risk.dao.RiskDao">
	<select id="findListByQuery" parameterType="Risk" resultMap="resultMap">
		select
		    pr.id
		    pr.summary
		    pr.risk
		    pr.status
		    pr.createUser
		    pr.createTime
		    pr.updateUser
		    pr.updateTime
		from
			patient_risk pr
		<where>
			<trim suffixOverrides="and">
                <if test="id != null and id != ''">pr.id=#{id} and </if>
                <if test="summary != null and summary != ''">pr.summary=#{summary} and </if>
                <if test="risk != null and risk != ''">pr.risk=#{risk} and </if>
                <if test="status != null and status != ''">pr.status=#{status} and </if>
			</trim>
		</where>
	</select>

	<insert id="save" parameterType="Risk">
		insert into patient_risk(
			<trim suffixOverrides=",">
		        <if test="id != null and id != ''">id, </if>
		        <if test="summary != null and summary != ''">summary, </if>
		        <if test="risk != null and risk != ''">risk, </if>
		        <if test="status != null and status != ''">status, </if>
		        <if test="createUser != null and createUser != ''">createUser, </if>
		        <if test="createTime != null and createTime != ''">createTime, </if>
		        <if test="updateUser != null and updateUser != ''">updateUser, </if>
		        <if test="updateTime != null and updateTime != ''">updateTime, </if>
			</trim>
		) values(
			<trim suffixOverrides=",">
				<if test="id != null and id != ''">#{id}, </if>
				<if test="summary != null and summary != ''">#{summary}, </if>
				<if test="risk != null and risk != ''">#{risk}, </if>
				<if test="status != null and status != ''">#{status}, </if>
				<if test="createUser != null and createUser != ''">#{createUser}, </if>
				<if test="createTime != null and createTime != ''">#{createTime}, </if>
				<if test="updateUser != null and updateUser != ''">#{updateUser}, </if>
				<if test="updateTime != null and updateTime != ''">#{updateTime}, </if>
			</trim>
		)
	</insert>

	<update id="update" parameterType="Risk">
		update patient_risk
		<set>
			<trim suffixOverrides=",">
				<if test="id != null and id != ''">id=#{id}, </if>
				<if test="summary != null and summary != ''">summary=#{summary}, </if>
				<if test="risk != null and risk != ''">risk=#{risk}, </if>
				<if test="status != null and status != ''">status=#{status}, </if>
				<if test="createUser != null and createUser != ''">createUser=#{createUser}, </if>
				<if test="createTime != null and createTime != ''">createTime=#{createTime}, </if>
				<if test="updateUser != null and updateUser != ''">updateUser=#{updateUser}, </if>
				<if test="updateTime != null and updateTime != ''">updateTime=#{updateTime}, </if>
			</trim>
		</set>
		<where>
			<trim suffixOverrides="and">
				<if test="id != null and id != ''">id=#{id} and </if>
			</trim>
		</where>
	</update>

	<resultMap id="resultMap" type="Risk">
		<id property="id" javaType="java.lang.String" column="id"/>
	    <result property="id" javaType="java.lang.String" column="id"/>
	    <result property="summary" javaType="java.lang.String" column="summary"/>
	    <result property="risk" javaType="java.lang.String" column="risk"/>
	    <result property="status" javaType="java.lang.String" column="status"/>
	    <result property="createUser" javaType="java.lang.String" column="createUser"/>
	    <result property="createTime" javaType="java.util.Date" column="createTime"/>
	    <result property="updateUser" javaType="java.lang.String" column="updateUser"/>
	    <result property="updateTime" javaType="java.util.Date" column="updateTime"/>
	</resultMap>
</mapper>